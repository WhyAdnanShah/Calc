<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eerie_black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPlus"
        android:textColor="@color/wheat"

        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/MineShaft"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
        app:layout_constraintStart_toEndOf="@+id/buttonEquals" />

    <Button
        android:id="@+id/button4"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:onClick="numberEvent"
        android:text="4"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button3"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="numberEvent"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="2"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button8"
        android:textColor="@color/wheat"
        android:backgroundTint="@color/Killarney"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="numberEvent"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:textColor="@color/wheat"
        android:backgroundTint="@color/Killarney"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="numberEvent"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/button1"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:text="1"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="numberEvent"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button5"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="numberEvent"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button7"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:onClick="numberEvent"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <Button
        android:id="@+id/buttonEquals"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/CardonGreen"

        android:text="="
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        app:layout_constraintStart_toEndOf="@+id/buttonDot" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/Killarney"
        android:onClick="numberEvent"
        android:text="."

        android:textColor="@color/wheat"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/button0"
        android:backgroundTint="@color/Killarney"
        android:textColor="@color/wheat"

        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:onClick="numberEvent"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonMultiply"
        android:textColor="@color/wheat"

        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/MineShaft"

        android:text="*"
        android:textSize="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/buttonDivide"
        android:textColor="@color/wheat"

        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/MineShaft"

        android:text="/"
        android:textSize="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/buttonMinus"
        android:textColor="@color/wheat"

        android:layout_width="85dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:backgroundTint="@color/MineShaft"
        android:text="-"
        android:textSize="30dp"

        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button3" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="end"
        android:textSize="50sp"
        android:inputType="numberSigned"
        android:focusable="false"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" d/>

    <EditText
        android:id="@+id/newNumber"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="end"
        android:inputType="number|numberDecimal|numberSigned"
        android:focusable="false"
        android:textSize="40sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text=""
        android:textSize="35sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/newNumber"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

